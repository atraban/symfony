{% extends "account.html.twig" %}

{% form_theme form _self %}

{% block password_widget %}
    {% set type = type|default('password') %}
    {{ block('register_password') }}
{% endblock %}

{% block register_password %}
    {% set type = type|default('password') %}
    <div class="form-group">
        {#<label class="col-md-4 control-label" for="username">{{ label }}</label>#}
        <div class="col-md-6">
            <input type="password" {{ block('widget_attributes') }} />
        </div>
    </div>
    {#{{ form_row(form.plainPassword) }}#}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="col-md-8 col-md-offset-2 account-panel">
            <div class="panel panel-default">
                <div class="panel-heading">{{ 'Registration'|trans({}, 'FOSUserBundle') }}</div>
                <div class="panel-body">
                    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
                        {#{{ form_widget(form) }}#}

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="username">{{ form_label(form.username) }}</label>
                            <div class="col-md-6">
                                {{ form_widget(form.username) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="username">{{ form_label(form.email) }}</label>
                            <div class="col-md-6">
                                {{ form_widget(form.email) }}
                            </div>
                        </div>
                            {#{{ form_widget(form.plainPassword) }}#}
                            {{ form_widget(form.plainPassword.first) }}
                        <div>
                            <input type="submit" value="{{ 'Register'|trans({}, 'FOSUserBundle') }}" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock body %}