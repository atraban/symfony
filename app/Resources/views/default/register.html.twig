{% extends "account.html.twig" %}

{% block body %}
    <div class="container">
        <div class="col-md-8 col-md-offset-2 account-panel">
            <div class="panel panel-default">
                <div class="panel-heading">{{ 'Login to account'|trans({}, 'FOSUserBundle') }}</div>
                <div class="panel-body">
                    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
                        {#{{ form_widget(form) }}#}

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="username">{{ form_label(form.username) }}</label>
                            <div class="col-md-6">
                                {{ form_widget(form.username) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="username">{{ form_label(form.password) }}</label>
                            <div class="col-md-6">
                                {{ form_widget(form.password) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="username">{{ form_label(form.password_confirmation) }}</label>
                            <div class="col-md-6">
                                {{ form_widget(form.password_confirmation) }}
                            </div>
                        </div>

                        <div>
                            <input type="submit" value="{{ 'Register'|trans({}, 'FOSUserBundle') }}" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock body %}
